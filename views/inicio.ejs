<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Database Manager</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background: #f4f4f4;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        nav .nav__logo a {
            color: #fff;
            text-decoration: none;
            font-size: 24px;
            background-color: #5a0016;
            justify-content: center;
            text-align: center;
            border-radius: 15px;
        }

        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 20px;
        }

        .container__left {
            text-align: center;
        }

        .container__left h1 {
            font-size: 36px;
            margin-bottom: 20px;
            color: #800020;
        }

        .container__btn .btn {
            background: #800020;
            color: #fff;
            border: none;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .container__btn .btn:hover {
          background: #333;
          color: #fff;
          transform: translateY(-5px);
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .container__right {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 100%;
            max-width: 600px;
            padding: 20px;
        }

        .container__right .content {
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 100%;
        }

        .container__right .content h4 {
            margin: 0;
            font-size: 24px;
            color: #800020;
        }

        .container__right .content h2 {
            margin: 10px 0;
            font-size: 28px;
            color: #5a0016;
        }

        .container__right .content p {
            font-size: 18px;
            line-height: 1.6;
            color: #666;
        }

        .container__right .content ul {
            list-style-type: none;
            padding: 0;
        }

        .container__right .content ul li {
            margin: 10px 0;
            color: #333;
        }

        .container__right .content ul li::before {
            content: '-';
            color: #800020;
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <nav>
        <div class="nav__logo">
            <a href="#">Database Manager</a>
        </div>
    </nav>
    <div class="container">
        <div class="container__left">
            <h1>Database Manager</h1>
            <div class="container__btn">
                <a href="/crear-conexion">
                    <button class="btn">
                        Ingresar
                    </button>
                </a>
            </div>
        </div>
        <div class="container__right">
            <div class="content">
                
                <h2>Gestor de BD</h2>
                <p>
                    Diseñada por:
                </p>
                <ul>
                    <li>Emma Résendíz Juárez</li>
                    <li>Carlos Enrique Villarreal Barrón</li>
                    
                    <li>TI02SM-23</li>
                </ul>
            </div>
        </div>
    </div>

    
    <script>
        const scrollRevealOption = {
            distance: "50px",
            origin: "bottom",
            duration: 1000,
        };

        ScrollReveal().reveal(".container__left h1", {
            ...scrollRevealOption,
        });
        ScrollReveal().reveal(".container__btn", {
            ...scrollRevealOption,
            delay: 500,
        });
        ScrollReveal().reveal(".content h4", {
            ...scrollRevealOption,
            delay: 2000,
        });
        ScrollReveal().reveal(".content h2", {
            ...scrollRevealOption,
            delay: 2500,
        });
        ScrollReveal().reveal(".content p, .content ul", {
            ...scrollRevealOption,
            delay: 3000,
        });
    </script>
</body>
</html>